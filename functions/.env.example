# Firebase Configuration
# These are automatically set when deployed to Cloud Functions
# For local development, set these values

# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT=your-project-id

# Firebase Storage Bucket
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Rate Limiting Configuration
RATE_LIMIT_IMAGES_PER_HOUR=20
RATE_LIMIT_TEXTS_PER_MINUTE=60

# Moderation Thresholds (POSSIBLE, LIKELY, VERY_LIKELY)
# Set to the minimum level that triggers blocking
IMAGE_MODERATION_THRESHOLD=LIKELY

# Enable verbose logging (true/false)
VERBOSE_LOGGING=true
